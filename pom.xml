      <id>veupathdb</id>
      <url>https://maven.pkg.github.com/veupathdb/maven-packages</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <modules>
    <module>Test</module>
    <module>Core</module>
    <module>Events</module>
    <module>Cache</module>
    <module>Cli</module>
